<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="Num 1:" />

    <EditText
        android:id="@+id/txtNum1"
        android:hint="ej. 5"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:text="Num 2:" />

    <EditText
        android:id="@+id/txtNum2"
        android:hint="ej. 4.8"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spnOpciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNum2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:entries="@array/opciones" />

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_below="@id/spnOpciones"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Respuesta: ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <Button
        android:id="@+id/btnCalcular"
        android:layout_below="@id/lblRespuesta"
        android:layout_marginTop="40dp"
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>